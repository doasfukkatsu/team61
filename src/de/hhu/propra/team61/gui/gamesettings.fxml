<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Button?>

<GridPane fx:id="settingGrid" fx:controller="de.hhu.propra.team61.gui.SettingsController" alignment ="TOP_LEFT" hgap="10" vgap="10" xmlns:fx="http://javafx.com/fxml">
    <children>
        <Text text="Choose teams:" GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="3"/>
        <Button fx:id="plus" text="+ one more team" onAction="#handlePlus" visible="true" GridPane.columnIndex="0" GridPane.rowIndex="6" styleClass="plus"/>
        <Button fx:id="minus" text="âˆ’ one less team" onAction="#handleMinus" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="7" styleClass="plus"/>
        <Text text="Choose Game Style:" GridPane.columnIndex="4" GridPane.rowIndex="1"/>
        <ChoiceBox fx:id="gameStyle" GridPane.columnIndex="4" GridPane.rowIndex="2" GridPane.columnSpan="2"/>
        <Text fx:id="level" GridPane.columnIndex="4" GridPane.rowIndex="3"/>
        <Text fx:id="teamSize" GridPane.columnIndex="4" GridPane.rowIndex="4" GridPane.columnSpan="2"/>
        <Button fx:id="edit" text="Edit" onAction="#handleEdit" GridPane.columnIndex="6" GridPane.rowIndex="2" styleClass="mainButton"/>
        <Text text="Here you can change team size, level and items." GridPane.columnIndex="7" GridPane.rowIndex="2" GridPane.columnSpan="5"/>
        <Button fx:id="back" text="Back" onAction="#handleBack" GridPane.columnIndex="0" GridPane.rowIndex="14" styleClass="mainButton"/>
        <Button fx:id="cont" text="Start!" onAction="#handleContinue" GridPane.columnIndex="5" GridPane.rowIndex="14" GridPane.columnSpan="3"/>
        <Text fx:id="error" GridPane.columnIndex="0" GridPane.rowIndex="15" GridPane.columnSpan="5"/>
    </children>
    <padding>
        <Insets bottom="25" left="25" right="25" top="25" />
    </padding>
</GridPane>